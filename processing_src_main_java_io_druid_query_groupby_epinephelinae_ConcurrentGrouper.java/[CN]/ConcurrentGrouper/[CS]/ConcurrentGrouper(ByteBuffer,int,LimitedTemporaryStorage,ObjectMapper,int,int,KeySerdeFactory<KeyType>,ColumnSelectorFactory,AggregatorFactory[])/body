{
  this.groupers=new ArrayList<>(concurrencyHint);
  final int sliceSize=(buffer.capacity() / concurrencyHint);
  for (int i=0; i < concurrencyHint; i++) {
    final ByteBuffer slice=buffer.duplicate();
    slice.position(sliceSize * i);
    slice.limit(slice.position() + sliceSize);
    groupers.add(new SpillingGrouper<>(slice.slice(),keySerdeFactory,columnSelectorFactory,aggregatorFactories,temporaryStorage,spillMapper,bufferGrouperMaxSize,bufferGrouperInitialBuckets));
  }
}
