{
synchronized (lock) {
    if (started) {
      return;
    }
    final Duration delay=config.get().getPollDuration().toStandardDuration();
    ScheduledExecutors.scheduleWithFixedDelay(exec,delay,delay,new Runnable(){
      @Override public void run(){
        poll();
      }
    }
);
    started=true;
  }
}
