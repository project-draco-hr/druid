{
  final String insertOrUpdateStatement=insertOrUpdateStatement(tableName,keyColumn,valueColumn);
  return getDBI().withHandle(new HandleCallback<Void>(){
    @Override public Void withHandle(    Handle handle) throws Exception {
      handle.createStatement(insertOrUpdateStatement).bind("key",key).bind("value",value).execute();
      return null;
    }
  }
);
}
