{
  if (target.exists()) {
    try {
      log.info("Deleting Index File[%s]",target);
      FileUtils.deleteDirectory(target);
    }
 catch (    Exception e) {
      log.makeAlert(e,"Unable to remove merged segment for dataSource[%s]",schema.getDataSource()).addData("interval",sink.getInterval()).emit();
    }
  }
}
