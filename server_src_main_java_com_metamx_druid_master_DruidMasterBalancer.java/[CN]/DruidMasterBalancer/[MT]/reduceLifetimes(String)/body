{
  for (  BalancerSegmentHolder2 holder : currentlyMovingSegments.get(tier).values()) {
    holder.reduceLifetime();
    if (holder.getLifetime() <= 0) {
      log.makeAlert("[%s]: Balancer move segments queue has a segment stuck",tier,ImmutableMap.<String,Object>builder().put("segment",holder.getSegment().getIdentifier()).build()).emit();
    }
  }
}
