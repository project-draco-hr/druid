{
  for (  BalancerSegmentHolder holder : currentlyMovingSegments.get(tier).values()) {
    holder.reduceLifetime();
    if (holder.getLifetime() <= 0) {
      log.makeAlert("[%s]: Balancer move segments queue has a segment stuck",tier).addData("segment",holder.getSegment().getIdentifier()).addData("server",holder.getServer()).emit();
    }
  }
}
