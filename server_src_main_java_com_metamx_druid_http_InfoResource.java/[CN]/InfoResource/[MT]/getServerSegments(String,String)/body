{
  Response.ResponseBuilder builder=Response.status(Response.Status.OK);
  DruidServer server=serverInventoryManager.getInventoryValue(serverName);
  if (server == null) {
    return Response.status(Response.Status.NOT_FOUND).build();
  }
  if (full != null) {
    return builder.entity(server.getSegments().values()).build();
  }
  return builder.entity(Collections2.transform(server.getSegments().values(),new Function<DataSegment,String>(){
    @Override public String apply(    @Nullable DataSegment segment){
      return segment.getIdentifier();
    }
  }
)).build();
}
