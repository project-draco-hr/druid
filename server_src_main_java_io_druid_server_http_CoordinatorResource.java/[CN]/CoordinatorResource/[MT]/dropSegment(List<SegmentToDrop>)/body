{
  Response resp=Response.status(Response.Status.OK).build();
  for (  SegmentToDrop segmentToDrop : segmentsToDrop) {
    try {
      coordinator.dropSegment(segmentToDrop.getFromServer(),segmentToDrop.getSegmentName(),new LoadPeonCallback(){
        @Override protected void execute(){
          return;
        }
      }
);
    }
 catch (    Exception e) {
      resp=Response.status(Response.Status.BAD_REQUEST).entity(e.getMessage()).build();
      break;
    }
  }
  return resp;
}
