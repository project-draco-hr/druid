{
  return new FiniteAppenderatorDriver(appenderator,new ActionBasedSegmentAllocator(toolbox.getTaskActionClient(),dataSchema,ioConfig.getSequenceName()),toolbox.getSegmentHandoffNotifierFactory(),new ActionBasedUsedSegmentChecker(toolbox.getTaskActionClient()),toolbox.getObjectMapper(),tuningConfig.getMaxRowsPerSegment(),tuningConfig.getHandoffConditionTimeout());
}
