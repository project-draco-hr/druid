{
  int aggsSize=0;
  for (  AggregatorFactory agg : schema.getAggregators()) {
    aggsSize+=agg.getMaxIntermediateSize();
  }
  int bufferSize=aggsSize * config.getMaxRowsInMemory();
  IncrementalIndex newIndex=new IncrementalIndex(new IncrementalIndexSchema.Builder().withMinTimestamp(minTimestamp).withQueryGranularity(schema.getGranularitySpec().getQueryGranularity()).withDimensionsSpec(schema.getParser()).withMetrics(schema.getAggregators()).build(),new OffheapBufferPool(bufferSize));
  FireHydrant old;
  if (currHydrant == null) {
    old=currHydrant;
    currHydrant=new FireHydrant(newIndex,hydrants.size(),getSegment().getIdentifier());
    hydrants.add(currHydrant);
  }
 else {
synchronized (currHydrant) {
      old=currHydrant;
      currHydrant=new FireHydrant(newIndex,hydrants.size(),getSegment().getIdentifier());
      hydrants.add(currHydrant);
    }
  }
  return old;
}
