{
  final File file=getFile(segment);
  long lastModified=Long.MAX_VALUE;
  if (file.isDirectory()) {
    for (    File childFile : file.listFiles()) {
      lastModified=Math.min(childFile.lastModified(),lastModified);
    }
  }
 else {
    lastModified=file.lastModified();
  }
  return lastModified;
}
