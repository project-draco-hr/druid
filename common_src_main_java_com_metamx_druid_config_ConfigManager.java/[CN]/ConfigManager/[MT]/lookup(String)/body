{
  return dbi.withHandle(new HandleCallback<byte[]>(){
    @Override public byte[] withHandle(    Handle handle) throws Exception {
      return handle.createQuery(selectStatement).bind("name",key).map(new ResultSetMapper<byte[]>(){
        @Override public byte[] map(        int index,        ResultSet r,        StatementContext ctx) throws SQLException {
          return r.getBytes("payload");
        }
      }
).first();
    }
  }
);
}
