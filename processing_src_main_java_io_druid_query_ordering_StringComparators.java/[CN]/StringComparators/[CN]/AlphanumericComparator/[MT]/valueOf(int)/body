{
  if (digit <= '9') {
    return digit - '0';
  }
  if (digit <= '\u0669') {
    return digit - '\u0660';
  }
  if (digit <= '\u06F9') {
    return digit - '\u06F0';
  }
  if (digit <= '\u096F') {
    return digit - '\u0966';
  }
  if (digit <= '\uFF19') {
    return digit - '\uFF10';
  }
  return digit;
}
