{
  FileSystem fs;
  try {
    fs=path.getFileSystem(config);
    if (!fs.exists(path)) {
      throw new SegmentLoadingException("Path[%s] doesn't exist.",path);
    }
    return fs;
  }
 catch (  IOException e) {
    throw new SegmentLoadingException(e,"Problems interacting with filesystem[%s].",path);
  }
}
