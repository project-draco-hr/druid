{
  final HadoopDruidIndexerConfig cfg;
  try {
    cfg=jsonReadWriteRead("{" + " \"granularitySpec\":{" + "   \"type\":\"uniform\","+ "   \"gran\":\"hour\","+ "   \"intervals\":[\"2012-01-01/P1D\"]"+ " }"+ "}",HadoopDruidIndexerConfig.class);
  }
 catch (  Exception e) {
    throw Throwables.propagate(e);
  }
  final UniformGranularitySpec granularitySpec=(UniformGranularitySpec)cfg.getGranularitySpec();
  Assert.assertEquals("getIntervals",Lists.newArrayList(new Interval("2012-01-01/P1D")),granularitySpec.getIntervals().get());
  Assert.assertEquals("getSegmentGranularity","HOUR",granularitySpec.getGranularity().toString());
}
