{
  final QueryRunnerFactory<T,Query<T>> factory=conglomerate.findFactory(query);
  Iterable<FireChief> chiefsOfDataSource=chiefs.get(Iterables.getOnlyElement(query.getDataSource().getNames()));
  return chiefsOfDataSource == null ? new NoopQueryRunner() : factory.getToolchest().mergeResults(factory.mergeRunners(MoreExecutors.sameThreadExecutor(),Iterables.transform(chiefsOfDataSource,new Function<FireChief,QueryRunner<T>>(){
    @Override public QueryRunner<T> apply(    FireChief input){
      return input.getQueryRunner(query);
    }
  }
)));
}
