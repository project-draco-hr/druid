{
  Preconditions.checkNotNull(taskAction,"taskAction");
  log.info("Logging action for task[%s]: %s",taskAction.getTask().getId(),taskAction);
  dbi.withHandle(new HandleCallback<Integer>(){
    @Override public Integer withHandle(    Handle handle) throws Exception {
      return handle.createStatement(String.format("INSERT INTO %s (task_id, log_payload) VALUES (:task_id, :log_payload)",dbConnectorConfig.getTaskLogTable())).bind("task_id",taskAction.getTask().getId()).bind("log_payload",jsonMapper.writeValueAsString(taskAction)).execute();
    }
  }
);
}
