{
  return retryingHandle(new HandleCallback<Boolean>(){
    @Override public Boolean withHandle(    Handle handle) throws Exception {
      return handle.createStatement(String.format("UPDATE %s SET active = :active, status_payload = :status_payload WHERE id = :id AND active = 1",config.getTasksTable())).bind("id",taskId).bind("active",active).bind("status_payload",jsonMapper.writeValueAsBytes(status)).execute() == 1;
    }
  }
);
}
