{
  this.maxSegmentsToMove=maxSegmentsToMove;
  this.millisToWaitBeforeDeleting=millisToWaitBeforeDeleting;
  this.mergeSegmentsLimit=mergeSegmentsLimit;
  this.mergeBytesLimit=mergeBytesLimit;
