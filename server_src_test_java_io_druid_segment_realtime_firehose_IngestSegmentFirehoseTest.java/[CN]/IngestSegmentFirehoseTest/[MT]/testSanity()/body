{
  File segmentDir=tempFolder.newFolder();
  createTestIndex(segmentDir);
  QueryableIndex qi=null;
  try {
    qi=indexIO.loadIndex(segmentDir);
    StorageAdapter sa=new QueryableIndexStorageAdapter(qi);
    WindowedStorageAdapter wsa=new WindowedStorageAdapter(sa,sa.getInterval());
    IngestSegmentFirehose firehose=new IngestSegmentFirehose(ImmutableList.of(wsa,wsa),ImmutableList.of("host"),ImmutableList.of("visited_sum","unique_hosts"),null,QueryGranularity.NONE);
    int count=0;
    while (firehose.hasMore()) {
      firehose.nextRow();
      count++;
    }
    Assert.assertEquals(18,count);
  }
  finally {
    if (qi != null) {
      qi.close();
    }
  }
}
