{
  if (offheap) {
    return new OffheapIncrementalIndex(0L,QueryGranularity.NONE,new AggregatorFactory[]{new CountAggregatorFactory("count")},TestQueryRunners.pool,true,100 * 1024 * 1024);
  }
 else {
    return new OnheapIncrementalIndex(0L,QueryGranularity.NONE,new AggregatorFactory[]{new CountAggregatorFactory("count")},1000);
  }
}
