{
  if (taskToolbox == null) {
    final RestS3Service s3Client=new RestS3Service(new AWSCredentials(PropUtils.getProperty(props,"com.metamx.aws.accessKey"),PropUtils.getProperty(props,"com.metamx.aws.secretKey")));
    final SegmentPusher segmentPusher=new S3SegmentPusher(s3Client,configFactory.build(S3SegmentPusherConfig.class),jsonMapper);
    final DbConnectorConfig dbConnectorConfig=configFactory.build(DbConnectorConfig.class);
    DBI dbi=new DbConnector(dbConnectorConfig).getDBI();
    final SegmentKiller segmentKiller=new S3SegmentKiller(s3Client,dbi,dbConnectorConfig,jsonMapper);
    taskToolbox=new TaskToolbox(coordinatorConfig,emitter,s3Client,segmentPusher,segmentKiller,jsonMapper);
  }
}
