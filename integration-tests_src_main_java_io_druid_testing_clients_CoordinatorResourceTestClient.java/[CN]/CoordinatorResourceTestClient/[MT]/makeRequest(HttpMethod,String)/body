{
  try {
    StatusResponseHolder response=new RequestBuilder(this.httpClient,method,new URL(url)).go(responseHandler).get();
    if (!response.getStatus().equals(HttpResponseStatus.OK)) {
      throw new ISE("Error while making request to url[%s] status[%s] content[%s]",url,response.getStatus(),response.getContent());
    }
    return response;
  }
 catch (  Exception e) {
    LOG.error(e,"Exception while sending request");
    throw Throwables.propagate(e);
  }
}
