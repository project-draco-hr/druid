{
  if (segments.size() <= 1) {
    return segments;
  }
  final T first=segments.get(0);
  final T second=segments.get(segments.size() - 1);
  return Lists.newArrayList(Iterables.filter(segments,new Predicate<T>(){
    @Override public boolean apply(    T input){
      return input.getInterval().overlaps(first.getInterval()) || input.getInterval().overlaps(second.getInterval());
    }
  }
));
}
